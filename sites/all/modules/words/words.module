function words_menu(){
  $items = array();

  $items['words/list'] = array(
    'page callback' => 'words_default_page_cb',
    'access callback' => TRUE,
    'type' => MENU_NORMAL_ITEM
  );
  
  $items['words/permcheck'] = array(
    'page callback' => 'words_default_page_cb',
    'access callback' => TRUE,
    'type' => MENU_NORMAL_ITEM
  );
 
  return $items;
}

function words_list_words(){
