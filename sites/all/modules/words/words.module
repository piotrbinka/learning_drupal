/**
 * Implements hook_block_info().
 */
function words_block_info() {
  // This adds my custom block to the block list
  $blocks = array();
  $blocks['my_block'] = array(
    'info' => t('My Custom Block'),
  );
  
  $blocks['my_test_block'] = array(
    'info' => t('My Test Block'),
  );   
  
  $blocks['my_sidebar_block'] = array(
    'info' => t('My Sidebar Block'),
  );  
  return $blocks;
}


function words_block_view($delta = '') {
  $block = array();
  switch($delta){
    case 'my_block':  
      if(user_access('access content')){ //good idea to check user perms here
         //$block['subject'] = t('MYblock_TITLE');
         $block['content'] = words_list_words();
      }
      break;
    case 'my_test_block':  
      if(user_access('access content')){ //good idea to check user perms here
         //$block['subject'] = t('My block data');
         $block['content'] = words_permission_check();
      }
      break;
    case 'my_sidebar_block':  
      if(user_access('access content')){ //good idea to check user perms here
         //$block['subject'] = t('My block data');
         $block['content'] = words_sidebar_data();
      }
      break;
  }
  return $block;
}
